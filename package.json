{
  "name": "iterations-server-api",
  "version": "0.0.0",
  "author": {
    "name": "Sergey Dunaevskiy",
    "email": "sergey@dunaevskiy.eu",
    "url": "https://dunaevskiy.eu/"
  },
  "main": "app.ts",
  "license": "UNLICENSED",
  "dependencies": {
    "axios": "^0.18.0",
    "cookie-session": "^1.3.3",
    "express": "^4.16.4",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.0",
    "mongoose": "^5.4.19",
    "passport": "^0.4.0",
    "passport-github2": "^0.1.11",
    "pg": "^7.9.0",
    "prettier": "^1.16.4",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^8.0.3",
    "tsconfig-paths": "^3.8.0",
    "typeorm": "^0.2.15",
    "typescript": "^3.3.4000",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^3.8.0"
  },
  "scripts": {
    "start": "NODE_ENV=development ts-node -P tsconfig.json -r tsconfig-paths/register app.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "//----------------------------------// DEVELOPMENT //----------------------------------//": "",
    "dev:start": "pm2 start --env development",
    "dev:stop": "pm2 stop Iterations-API-DEV",
    "dev:del": "pm2 del Iterations-API-DEV",
    "// MIGRATIONS (DEV DB CONNECTION)": "",
    "dev:mig:create": "ts-node -P tsconfig.json -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:create -c development -n ",
    "dev:mig:generate": "ts-node -P tsconfig.json -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:generate -c development -n ",
    "dev:mig:run": "ts-node -P tsconfig.json -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:run-c development",
    "dev:mig:revert": "ts-node -P tsconfig.json -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:revert-c development",
    "// SEEDS (DEV DB CONNECTION)": "",
    "dev:seed:create": "ts-node -P tsconfig.json -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:create -c development-seed -n ",
    "dev:seed:run": "ts-node -P tsconfig.json -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:run -c development-seed",
    "dev:seed:revert": "ts-node -P tsconfig.json -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:revert -c development-seed",
    "//-------------------------------------// TEST //--------------------------------------//": "",
    "test:start": "pm2 start --env test",
    "test:del": "pm2 del Iterations-API-TEST",
    "//----------------------------------// PRODUCTION //-----------------------------------//": "",
    "prod:start": "pm2 start --env production",
    "prod:stop": "pm2 stop Iterations-API",
    "prod:del": "pm2 del Iterations-API",
    "// MIGRATIONS (PROD DB CONNECTION)": "",
    "prod:mig:create": "ts-node -P tsconfig.json -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:create  -c production -n ",
    "prod:mig:run": "ts-node -P tsconfig.json -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:run -c production",
    "prod:mig:revert": "ts-node -P tsconfig.json -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:revert -c production",
    "// SEEDS (PROD DB CONNECTION)": "",
    "prod:seed:run": "ts-node -P tsconfig.json -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:run -c production-seed",
    "prod:seed:revert": "ts-node -P tsconfig.json -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:revert -c production-seed"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "jest": "^24.5.0",
    "jest-haste-map": "^24.5.0",
    "jest-resolve": "^24.5.0",
    "pm2": "^3.4.0",
    "sinon": "^7.3.1",
    "ts-jest": "^24.0.0"
  }
}
